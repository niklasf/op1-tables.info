{
  "name": "op1-tables.com",
  "version": "1.0.0",
  "private": true,
  "description": "User interface to probe 8-piece op1 tablebase and statistics",
  "keywords": [
    "op1",
    "chess",
    "endgame",
    "tablebase"
  ],
  "homepage": "https://op1-tables.com",
  "bugs": {
    "url": "https://github.com/niklasf/op1-tables.com/issues",
    "email": "niklas.fiekas@backscattering.de"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Niklas Fiekas",
    "email": "niklas.fiekas@backscattering.de"
  },
  "repository": "https://github.com/niklasf/op1-tables.com",
  "dependencies": {
    "@badrap/result": "^0.3.1",
    "@lichess-org/chessground": "^9.8.3",
    "chessops": "^0.15.0",
    "snabbdom": "^3.6.3"
  },
  "devDependencies": {
    "esbuild": "^0.25.11",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "prepare": "$npm_execpath run build-js && $npm_execpath run build-css",
    "build-js": "tsc -noEmit && esbuild --bundle src/main.ts --minify --sourcemap --outfile=dist/main.min.js --target=es2019,chrome105,edge91,firefox67,opera55,safari11",
    "build-css": "esbuild --bundle css/style.css --minify --sourcemap --external:\"*.woff\" --external:\"*.woff2\" --outfile=dist/style.min.css --target=chrome105,edge91,firefox67,opera55,safari11",
    "watch-js": "tsc -noEmit && esbuild --bundle src/main.ts --minify --sourcemap --outfile=dist/main.min.js --target=es2019,chrome105,edge91,firefox67,opera55,safari11 --watch",
    "watch-css": "esbuild --bundle css/style.css --minify --sourcemap --external:\"*.woff\" --external:\"*.woff2\" --outfile=dist/style.min.css --target=chrome105,edge91,firefox67,opera55,safari11 --watch",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  }
}
